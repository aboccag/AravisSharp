<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        
        <!-- Cross-platform support: Remove RuntimeIdentifier to enable multi-platform builds -->
        <!-- Uncomment for platform-specific builds: -->
        <!-- <RuntimeIdentifier>linux-x64</RuntimeIdentifier> -->
        <!-- <RuntimeIdentifier>linux-arm64</RuntimeIdentifier> -->
        <!-- <RuntimeIdentifier>win-x64</RuntimeIdentifier> -->
        <!-- <RuntimeIdentifier>osx-x64</RuntimeIdentifier> -->
        
        <!-- Enable runtime-specific builds for NuGet package -->
        <RuntimeIdentifiers>linux-x64;linux-arm64;win-x64;osx-x64</RuntimeIdentifiers>
        <TargetFrameworks>net8.0;net10.0</TargetFrameworks>
        
        <!-- Library package metadata -->
        <PackageId>AravisSharp</PackageId>
        <Version>0.1.0</Version>
        <Authors>Alexandre</Authors>
        <Description>C# bindings for the Aravis industrial camera library (GenICam/GigE Vision/USB3 Vision)</Description>
        <PackageLicenseExpression>LGPL-2.1-or-later</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/yourusername/AravisSharp</RepositoryUrl>
        <PackageTags>aravis;genicam;gigevision;usb3vision;camera;industrial;imaging</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="SixLabors.ImageSharp" Version="3.1.12" />
    </ItemGroup>
    
